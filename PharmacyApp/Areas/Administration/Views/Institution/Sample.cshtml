
@using PharmacyApp.Constants
@{
    ViewBag.Title = "New Institution";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-7">
        <h2>NEW INSTITUTION</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.RouteUrl(HomeControllerRoute.GetIndex)">Home</a>
            </li>
            <li>
                <a href="@Url.RouteUrl(InstitutionControllerRoute.GetIndex)">Institutions</a>
            </li>
            <li class="active">
                <a href="#">@ViewBag.Title</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>New institution form</h5>
                </div>
                <div class="ibox-content">
                    <form id="form" class="form-horizontal" method="post" action="@Url.RouteUrl(InstitutionControllerRoute.GetCreate)" new { enctype="multipart/form-data" }>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                       
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-5">
                                <button class="btn btn-outline btn-sm btn-primary" type="submit">Create Institution</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}


