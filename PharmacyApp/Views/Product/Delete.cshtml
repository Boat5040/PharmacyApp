@model PharmacyApp.ViewModels.ProductViewModel
    @using PharmacyApp.Constants
@{
    ViewBag.Title = "Delete Product";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-7">
        <h2>DELETE PRODUCT</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.RouteUrl(HomeControllerRoute.GetIndex)">Home</a>
            </li>
            <li>
                <a href="@Url.RouteUrl(ProductControllerRoute.GetIndex)">Products</a>
            </li>
            <li class="active">
                <a href="#">@ViewBag.Title</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Are you sure you want to delete this product?</h5>
                </div>
                <div class="ibox-content">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Confirm" class="btn btn-outline btn-sm btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
